@model IEnumerable<EmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2 class="mb-4">Employee List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Pincode</th>
            <th>Address</th>
            <th>DOB</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Pincode</td>
                <td>@emp.Address</td>
                <td>@emp.DOB.ToShortDateString()</td>
                <td>@emp.PhoneNumber</td>
                <td>@emp.Email</td>
                <td>@emp.Gender</td>
                <td class="d-flex">
                    <a class="btn btn-sm btn-primary" href="/Employee/Edit/@emp.Id">Edit</a>
                    &nbsp;
                    <a class="btn btn-sm btn-danger" href="/Employee/Delete/@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success mt-3" href="/Employee/Create">➕ Add New Employee</a>
